<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:VSTabPath;assembly=VSTabPath">
    <DataTemplate x:Key="TabPathTemplate" DataType="{x:Type local:WindowFrameTitleWithPath}">
        <StackPanel Orientation="Horizontal">
            <ContentControl Content="{Binding Title}" ContentTemplate="{Binding TitleTemplate}" />
            <TextBlock
                Name="TabPathText"
                Margin="4,0,0,0"
                VerticalAlignment="Center"
                FontSize="11"
                Opacity="0.6"
                Text="{Binding DirectoryPath}" />
        </StackPanel>

        <DataTemplate.Triggers>
            <DataTrigger Binding="{Binding IsPathVisible}" Value="False">
                <DataTrigger.Setters>
                    <Setter TargetName="TabPathText" Property="Visibility" Value="Collapsed" />
                </DataTrigger.Setters>
            </DataTrigger>
        </DataTemplate.Triggers>
    </DataTemplate>
</ResourceDictionary>